{
  "name": "mspaint-desktop",
  "version": "1.0.0",
  "description": "MSPaint 桌面客户端 - 经典 MS Paint 的现代重制版",
  "main": "main-mspaint.js",
  "homepage": "https://github.com/mspaint-desktop",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build-linux",
    "pack": "electron-builder --dir",
    "dist:deb": "electron-builder --linux deb"
  },
  "keywords": [
    "mspaint",
    "paint",
    "drawing",
    "electron",
    "desktop"
  ],
  "author": {
    "name": "MSPaint Desktop",
    "email": "mspaint@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.mspaint.desktop",
    "productName": "MSPaint画图",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main-mspaint.js",
      "app-icon.png",
      "mspaint/**/*",
      "node_modules/**/*"
    ],
    "asar": true,
    "compression": "maximum",
    "afterPack": "./scripts/fix-icons.js",
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Graphics",
      "icon": "assets/icon.png",
      "maintainer": "mspaint@example.com"
    }
  }
}
